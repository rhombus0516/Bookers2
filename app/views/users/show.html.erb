
<div class = " container">
    <div class ="row">
        <div class = "col-md-3">
            
<%= render 'books/book', book: @book %>

        </div>
    </div>
</div>

<h1>Books</h1>
<table>
   <thead>
       <tr>
           <th>Title</th>
           <th>Opinion</th>
       </tr>
   </thead>
   <tbody>
 <% @books.each do |book| %>
       <tr>
           <td>
               <%= image_tag @user.get_profile_image(100,100) %></td>
           <td><%= link_to book.title, "/books/#{book.id}" %></td>
           <td><%= book.body %></td>
       </tr>
       <% end %>
</tbody>
</table>
        </div>
     </div>
</div>