<% if flash[:notice] %>
<p id= "notice">
    <%= flash[:notice] %>
</p>
<% end %>

<% if @user.errors.any? %>
    <%= @user.errors.count %>件エラーが発生しました
    <ul>
    <% @user.errors.full_messages.each do |message| %>
     <li><%= message %></li>
<% end %>
    </ul>
<% end %>    
<h1>User info</h1>
 <%= form_with model: @user do |f| %>
     <label for="inputName">Name</label>
     <%= f.text_field :name, autofocus: true, id:"inputName", placecholder:"名前"%>
     <label for="inputImage">Image</label>
     <%= f.file_field :profile_image, placecholder: "プロフィール画像", accept: "image/*",size: "200*200"%>
     <label for="inputIntroduction">Introduction</label>
     <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placecholder:"自己紹介"%>
     <%= f.submit "Update User" %>
 <% end %>
 


