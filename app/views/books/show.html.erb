<%= render 'book', book: @book %>

<h1>Book detail</h1>
<table>
 <tbody>
    <tr>
    <td><%= image_tag @book.user.get_profile_image(100,100) %></td>
<td><%= link_to @book.user.name, "/users/#{@user.id}" %></td>
<td><%= @book.title %></td>
<td><%= @book.body %></td>

<td><% if @book.user ==  current_user %>
 <%= link_to "Edit", edit_book_path(@book.id) %>
 <% end %></td>

<td><% if @book.user ==  current_user %>
<%= link_to "Destroy", destroy_book_path, method: :delete, "data-confirm" => "本当に消しますか?" %>
<% end %></td>
</tr>
</tbody>
</table>