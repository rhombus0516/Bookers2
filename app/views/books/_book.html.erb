<% if book.errors.any? %>
    <%= book.errors.count %>件エラーが発生しました
    <ul>
        <% book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
         <% end %>
    </ul>
<% end %>

<div>
    <%= flash[:notice] %>
</div>

<div class = " container">
    <div class ="row">
<h2>User info</h2>

<div>

   <%= image_tag user.get_profile_image(100,100)%>
<table class="table table-striped">
    <tbody>
    <tr>name<%= user.name %></tr>
    <tr>introduction<%= user.introduction %></tr>
    </tbody>
</table>
</div>

<div class = " container">
