<% if @book.errors.any? %>
    <%= @book.errors.count %>件エラーが発生しました
    <ul>
        <% @book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
         <% end %>
    </ul>
<% end %>    

<div>
    <%= flash[:notice] %>
</div>

<h1>User info</h1>

<% @user %>
    
    <%= image_tag @user.get_image, size: "200×200" %>
    
    <div>name<%= @user.name %></div>
    <div>introduction<%= @user.introduction %></div>
    
    

<p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>



<h1>New book</h1>

<%= form_with model: book do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>

