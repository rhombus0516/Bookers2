<% if book.errors.any? %>
    <%= book.errors.count %>件エラーが発生しました
    <ul>
        <% book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
         <% end %>
    </ul>
<% end %>

<div>
    <%= flash[:notice] %>
</div>


<h2>User info</h2>

<div>

   <%= image_tag user.get_profile_image(100,100)%>
<table>
    <tbody>
    <tr>name<%= user.name %></tr>
    <tr>introduction<%= user.introduction %></tr>
    </tbody>
</table>
</div>
<p><%= link_to "プロフィール編集", edit_user_path(user) %></p>


<div>
<h2>New book</h2>

<%= form_with model: book do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
</div>
<% end %>
</div>
    </div>
</div>

