<div class = "col-md-3 offset-md-1">

   
        
            
<%= render 'book', book: @book, user: @user %>
            
   
<div class = " container">
 <div class ="row">
<h1>Books</h1>
<table class="table table-striped">
   <thead>
       <tr>
           <th>Title</th>
           <th>Opinion</th>
       </tr>
   </thead>
   <tbody>

       <% @books.each do |book| %>
       <tr>
           <td><%= link_to user_path(book.user.id) do %>
               <%= image_tag @user.get_profile_image(100,100) %>
               <% end %></td>
           <td><%= link_to book.title, "/books/#{book.id}" %></td>
           <td><%= book.body %></td>
       </tr>
       <% end %>
   </tbody>
</table>
</div>
</div>
     
    </div>