
<h1>User info</h1>

<% @user.each do |user| %>
    <% if user.image.attached? %>
     <%= image_tag user.image, size: "200×200" %>
    <% else %>
     <%= image_tag 'no-image', size: "200×200" %>
    <% end %>
    
    <%= user.name %>
    <%= user.introduction %>
    
<% end %>

<p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>



<h1>New book</h1>

<%= form_with model: Book.new do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>


<table>
   <thead>
       <tr>
           <th>Title</th>
           <th>Opinion</th>
       </tr>
   </thead>
   <tbody>
       <% @book.each do |book| %>
       <tr>
           <td><%= book.title %></td>
           <td><%= book.body %></td>
       </tr>
       <% end %>
   </tbody>
</table>
