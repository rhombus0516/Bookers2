
<h1>New book</h1>

<%= form_with model: @books, url: '/books', method: :post do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>

<table>
   <thead>
       <tr>
           <th>Title</th>
           <th>Opinion</th>
       </tr>
   </thead>
   <tbody>
       <% @book.each do |book| %>
       <tr>
           <td><%= book.title %></td>
           <td><%= book.body %></td>
       </tr>
       <% end %>
   </tbody>
</table>