
<h1>User info</h1>

<% @book.each do |book| %>
<% if book.image.attached? %>
<%= image_tag book.image, size: "200×200" %>
<% else %>
<%= image_tag 'default-image', size: "200×200" %>
<% end %>
<% end %>

<h1>New book</h1>

<%= form_with model: Book.new do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>